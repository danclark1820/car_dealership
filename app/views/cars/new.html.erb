<h1>Add a Car</h1>

<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>

<%= simple_form_for @car do |f| %>
  <%= f.input :color %>
  <%= f.input :year %>
  <%= f.input :mileage %>
  <%= f.input :description %>
  <%= f.association :manufacturer, label_method: :name %>
  <%= f.submit 'Add car' %>
<% end %>
